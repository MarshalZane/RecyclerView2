<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <ImageView
        android:id="@+id/item_PhotosView_img"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/item_introduce_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#444544"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_PhotosView_img"/>
    <TextView
        android:id="@+id/item_introduce_modle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textColor="#636363"
        android:layout_toRightOf="@id/item_PhotosView_img"
        android:layout_below="@id/item_introduce_title"/>
    <TextView
        android:id="@+id/item_introduce_content"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#636363"
        android:layout_toRightOf="@id/item_PhotosView_img"
        android:layout_below="@id/item_introduce_modle"/>
    <TextView
        android:id="@+id/item_introduce_pollxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月票"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="5dp"
        android:textColor="#636363"
        android:layout_toRightOf="@id/item_PhotosView_img"
        android:layout_below="@id/item_introduce_content"/>
    <TextView
        android:id="@+id/item_introduce_poll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#edaf1d"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_introduce_pollxiao"
        android:layout_alignTop="@id/item_introduce_pollxiao"
        />
</RelativeLayout>
